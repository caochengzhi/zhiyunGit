<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="jdbc.batch_size">0</property>
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		
		<mapping resource="com/chengzhi/scdp/system/dao/SysUsers.hbm.xml" />
		<mapping resource="com/chengzhi/scdp/system/dao/Resources.hbm.xml" />
		<mapping resource="com/chengzhi/scdp/system/dao/RoleResource.hbm.xml" />
		<mapping resource="com/chengzhi/scdp/system/dao/Roles.hbm.xml" />
		<mapping resource="com/chengzhi/scdp/system/dao/UserRole.hbm.xml" />
		<mapping resource="com/chengzhi/scdp/system/dao/SysDictDatas.hbm.xml" />
		<mapping resource="com/chengzhi/scdp/system/dao/SysDictType.hbm.xml" />
		
	</session-factory>

</hibernate-configuration>